<% settings = {:max_u => 38,
               :max_elts => 24,
               :max_rj45 => 48,
               :max_fc => 12,
               :min_height => params[:view]=='back' ? 20 : 27 } %>
<% @room = room || @room %>

<%= render 'rooms/action_buttons' if formats != [:pdf] %>

<div id="<%= @room.try(:title).try(:parameterize).try(:underscore) %>">

  <% islets.each do |islet, lanes| %>

    <div>
      <div>
        <div class="panel-islet">
          <% if @room.present? %>
            <div><h3>Salle <%= @room.title %> - Ilot <%= islet %></h3></div>
          <% end %>

          <div class="row">

            <ul class="frames <%= params[:view] %>"
                style="padding: 0;"
                data-update-url="<%= sort_frames_path %>"
                data-max-u='<%= settings[:max_u] %>'
                data-max-elts='<%= settings[:max_elts] %>'
                data-max-rj45='<%= settings[:max_rj45] %>'
                data-max-fc='<%= settings[:max_fc] %>' >

              <% lanes.each do |lane, bays| %>

                <% bays.each do |bay, frames| %>

                  <% if formats != [:pdf] %>
                    <div class="col-sm-12 col-lg-6" style='overflow: auto;'> <div class="panel well" style='overflow: auto;'><div class="panel-body">
                  <% end %>

                  <% frames.each do |frame, servers| %>
                    <div class="col-xs-12 col-sm-6">
                      <%= render 'frames/show', frame: frame, servers: servers, settings: settings %>
                    </div>
                  <% end %>

                  <% if formats != [:pdf] %>
                    </div>
                    <% if frames.size > 1 %>
                      <div class="panel-footer">
                        <%= render 'servers/sum_labels.html.erb',
                                   sums: (@sums[bay.frames.first.id].merge(@sums[bay.frames.last.id]){|_,a,b|a+b}),
                                   sum_u: nil,
                                   sum_elements: nil,
                                   max_u: settings[:max_u]*2,
                                   max_elts: settings[:max_elts]*2,
                                   max_rj45: settings[:max_rj45]*2,
                                   max_fc: settings[:max_fc]*2 %>
                      </div>
                    <% else %>
                      <div style="height: 41px;"></div>
                    <% end %>
                    </div>
                    </div>
                  <% end %>
                  <% if bay == bays.keys.last %>
                    <span class="clearfix"></span>
                  <% end %>

                <% end %>
              <% end %>

            </ul>
          </div>

        </div>

      </div>

    </div>

  <% end %>
</div>
