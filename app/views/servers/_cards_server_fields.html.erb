<% if @server.modele %>

<li class="list-group-item">
    <fieldset>
      <div class="col-sm-4">
      <%= f.select :composant_id, options_for_select(@server.modele.composants.where(type_composant_id: 4).map{|c| [c.name, c.id]}, f.object.composant_id) %>
      </div>
      <div class="col-sm-4">
        <%= f.select :card_id, options_for_select(Card.sorted.map{|card| [card.name, card.id]}, f.object.card_id) %>
      </div>
      <span>
        <%= f.hidden_field :_destroy %>
        <%= link_to "Supprimer", '#', class: "remove_fields pull-right" %>
      </span>
    </fieldset>
  </li>

<% end %>
