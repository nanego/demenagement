


<%= render 'layouts/breadcrumb', params: {"Rooms" => overview_rooms_path,
                                          @server.frame.room.title => room_path(@server.frame.room),
                                          "Frame #{@server.frame.title}" => frame_path(@server.frame),
                                          @server.nom => server_path(@server),
                                          'Edition' => ''} %>
<div class="page-header">
  <%= link_to servers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to @server, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
    Show
  <% end %>
  <h1>Server <%= @server.nom %></h1>
</div>

<%= render 'form' %>
