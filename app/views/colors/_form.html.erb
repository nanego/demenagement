<%= form_for(@color, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @color.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@color.errors.count, "error") %> prohibited this color from being saved:</h4>

      <ul>
      <% @color.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Type', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :parent_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Id', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :parent_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Code', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Valider', class: "btn btn-primary" %>
      <%= link_to colors_path, class: 'btn btn-default' do %>
        Annuler
      <% end %>
    </div>
  </div>
<% end %>
