<div class="container">

  <%= render 'layouts/breadcrumb', params: {'Configuration' => modeles_url, 'Racks' => ''} %>

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_armoire_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter un rack
        <% end %>
        <h1>Racks</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Activ√©</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @armoires) do |armoire| %>
              <td><%= armoire.title %></td>
              <td><%= armoire.description %></td>
              <td><input type="checkbox" <%= armoire.published ? "checked" : "" %> disabled></td>
              <td><%= link_to 'Modifier', edit_armoire_path(armoire) %></td>
              <td><%= link_to 'Supprimer', armoire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
