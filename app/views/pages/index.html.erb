<div class="container">

  <div class="row">

    <div class="col-md-12">

      <div class="thumbnail">
        <div class="caption-full text-center">
          <h4>Gestion de salle</h4>
        </div>
        <div class="img-responsive" style="margin:0;padding:70px 10px;
            background: url(<%= asset_path('data_center.jpg') %>) no-repeat center;
            -webkit-background-size: cover;
            background-size: cover;">
          <div class="row">
            <% Room.where(display_on_home_page: true).each do |room| %>
              <div class="col-md-4">
                <div class="well" style="background-color: rgba(255, 255, 255, 0.75);">
                  <div style="text-align: center;font-size: x-large;margin-bottom: 5px;"><%= link_to room.title, room %></div>
                  <ul>
                    <% Category.all.each do |cat| %>
                      <li><%= "#{cat} : #{room.servers.joins(:modele).where("modeles.category_id = ?", cat.id).count}" %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
