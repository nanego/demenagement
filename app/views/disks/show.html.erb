<div class="page-header">
  <%= link_to disks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_disk_path(@disk), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show disk</h1>
</div>

<dl class="dl-horizontal">
  <dt>Server:</dt>
  <dd><%= @disk.server_id %></dd>

  <dt>Disk type:</dt>
  <dd><%= @disk.disk_type_id %></dd>

  <dt>Quantity:</dt>
  <dd><%= @disk.quantity %></dd>

</dl>
