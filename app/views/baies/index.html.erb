<%= render 'layouts/breadcrumb', params: {'Configuration' => modeles_url, 'Baies' => ''} %>

<div class="container">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <h1>Toutes les baies</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Nom</th>
            <th>Serveurs</th>
            <th>Nombre de U</th>
            <th>Salle</th>
            <th>Ilot</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @baies) do |baie| %>
            <td><%= link_to baie.title, baie %></td>
            <td><%= baie.serveurs.map{|s| link_to s.nom, s }.join(' ').html_safe %></td>
            <td><%= baie.u %></td>
            <td><%= baie.salle.present? ? (link_to baie.salle, baie.salle) : baie.salle %></td>
            <td><%= baie.ilot %></td>
            <td><%= link_to 'Supprimer', baie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
