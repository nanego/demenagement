<%
  breadcrumb_variables = {'Salles' => salles_url,
                          @baie.salle.title => (@baie.present? ? salle_path(@baie.salle):''),
                          "Baie #{@baie.title}" => baie_path(@baie),
                          "Edition" => ''}
%>
<%= render 'layouts/breadcrumb', params: breadcrumb_variables %>

<div class="page-header">
  <h1>Modifier la baie <%= @baie.title %></h1>
</div>

<%= form_for(@baie, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @baie.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@baie.errors.count, "error") %> prohibited this armoire from being saved:</h4>

      <ul>
        <% @baie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :u, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :u, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :salle_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :salle_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ilot, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ilot, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :position, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :position, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :switch_slot, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :switch_slot, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Baie couplée à', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.object.other_baie.present? ? link_to(f.object.other_baie.title, baie_path(f.object.other_baie)) : "Aucune baie couplée" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

