<div class="container">

  <%= render 'layouts/breadcrumb', params: {'Configuration' => modeles_url, 'Localisations' => ''} %>

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_localisation_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter une localisation
        <% end %>
        <h1>Localisations</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Activ√©</th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @localisations) do |localisation| %>
            <td><%= localisation.title %></td>
            <td><%= localisation.description %></td>
            <td><input type="checkbox" <%= localisation.published ? "checked" : "" %> disabled></td>
            <td><%= link_to 'Modifier', edit_localisation_path(localisation) %></td>
            <td><%= link_to 'Supprimer', localisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
