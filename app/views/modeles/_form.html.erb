<%= form_for(@modele, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @modele.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@modele.errors.count, "error") %> prohibited this modele from being saved:</h4>

      <ul>
      <% @modele.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Nom', class: "col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Actif ?', class: "col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.check_box :published, class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-5 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Composants</h4></div>
      <ul class="list-group">
        <%= f.fields_for :composants do |builder| %>
          <%= render "composant_fields", :f => builder %>
        <% end %>
      </ul>
      <div class="panel-footer"><%= link_to_add_fields "Ajouter un composant", f, :composants %></div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit 'Sauvegarder', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
