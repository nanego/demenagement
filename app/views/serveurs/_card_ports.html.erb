<% port_quantity.to_i.times do |index| %>
  <% case port_type
       when PortType.find_by_name('RJ') %>

    <i class="port portRJ label-primary" data-position="<%= index+1 %>" data-type="RJ"></i>

  <% when PortType.find_by_name('FC') %>

    <i class="port portFC label-success" data-position="<%= index+1 %>" data-type="FC"></i>

  <% else %>

    <i class="port portSCSI" data-position="<%= index+1 %>" data-type="<%= port_type.try(:name) %>"><%= port_type.try(:name) %></i>

  <% end %>

  <%= '<br>'.html_safe unless alignment == 'horizontal' %>
<% end %>
