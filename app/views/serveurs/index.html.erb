    <div class="col-md-12">

      <div class="page-header">
        <%= link_to new_serveur_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter un serveur
        <% end %>
        <h1>Tous les serveurs</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>id</th>
              <th>Localisation</th>
              <th>Rack</th>
              <th>Type</th>
              <th>Nom</th>
              <th>Nb elts</th>
              <th>Architecture</th>
              <th>U</th>
              <th>Marque</th>
              <th>Modèle</th>
              <th>Numéro</th>
              <th>Conso</th>
              <th>Cluster</th>
              <th>Critique</th>
              <th>Domaine</th>
              <th>Gestionnaire</th>
              <th>Action</th>
              <th>Phase</th>
              <th>Salle</th>
              <th>Ilot</th>
              <th>Fc total</th>
              <th>Fc utilisé</th>
              <th>Rj45 total</th>
              <th>Rj45 utilisé</th>
              <th>Rj45 futur</th>
              <th>Ipmi utilisé</th>
              <th>Ipmi futur</th>
              <th>Rj45 cm</th>
              <th>Ipmi dédié</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @serveurs) do |serveur| %>
              <td><%= serveur.id %></td>
              <td><%= serveur.localisation %></td>
              <td><%= serveur.armoire %></td>
              <td><%= serveur.category %></td>
              <td><%= serveur.nom %></td>
              <td><%= serveur.nb_elts %></td>
              <td><%= serveur.architecture %></td>
              <td><%= serveur.u %></td>
              <td><%= serveur.marque %></td>
              <td><%= serveur.modele %></td>
              <td><%= serveur.numero %></td>
              <td><%= serveur.conso %></td>
              <td><%= serveur.cluster %></td>
              <td><%= serveur.critique %></td>
              <td><%= serveur.domaine %></td>
              <td><%= serveur.gestion %></td>
              <td><%= serveur.acte %></td>
              <td><%= serveur.phase %></td>
              <td><%= serveur.salle %></td>
              <td><%= serveur.ilot %></td>
              <td><%= serveur.fc_total %></td>
              <td><%= serveur.fc_utilise %></td>
              <td><%= serveur.rj45_total %></td>
              <td><%= serveur.rj45_utilise %></td>
              <td><%= serveur.rj45_futur %></td>
              <td><%= serveur.ipmi_utilise %></td>
              <td><%= serveur.ipmi_futur %></td>
              <td><%= serveur.rj45_cm %></td>
              <td><%= serveur.ipmi_dedie %></td>
              <td><%= link_to 'Modifier', edit_serveur_path(serveur) %></td>
              <td><%= link_to 'Supprimer', serveur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
