<div class="container">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_gestion_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter un gestionnaire
        <% end %>
        <h1>Gestionnaires</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Activ√©</th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @gestions) do |gestion| %>
            <td><%= gestion.title %></td>
            <td><%= gestion.description %></td>
            <td><input type="checkbox" <%= gestion.published ? "checked" : "" %> disabled></td>
            <td><%= link_to 'Modifier', edit_gestion_path(gestion) %></td>
            <td><%= link_to 'Supprimer', gestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>



