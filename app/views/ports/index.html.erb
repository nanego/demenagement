<div class="container">

  <div class="row">

    <div class="col-md-12 well">

      <div style="margin-bottom: 20px;">
        <h2>Liste des ports cabl√©s</h2>
        <h3>
          <% if @baie %>
            <%= link_to "#{@baie.name_with_salle_and_ilot}", baie_path(@baie), style: 'text-decoration: underline;' %>
          <% else %>
            <%= link_to "Salle #{@salle}", salle_path(@salle), style: 'text-decoration: underline;' %>
          <% end %>
        </h3>
      </div>

      <% @serveurs.each do |s| %>

        <h4 style="display: inline;"><%= s.nom %></h4><span> (<%= s.modele.title %>)</span>

        <p>
          <% s.cards_serveurs.each do |c| %>

            <% c.ports.each do |port| %>
              <% if port && port.cablename %>
                <%= "#{c.composant.name}#{c.composant.name.include?('SL') ? "/#{port.position}" : port.position} : #{port.network_conf}" %>
                <br>
              <% end %>
            <% end %>

          <% end %>


        </p>


      <% end %>

    </div>

  </div>

</div>
