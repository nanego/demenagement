<%= render 'layouts/breadcrumb', params: {"Salles" => rooms_path,
                                          @port.parent.server.frame.room.title => room_path(@port.parent.server.frame.room),
                                          "Frame #{@port.parent.server.frame.title}" => frame_path(@port.parent.server.frame),
                                          @port.parent.server.nom => server_path(@port.parent.server),
                                          "Port #{@port.parent.try(:composant).try(:name)} #{@port.position}" => ''} %>

<h3> <%= "#{@port.parent.server.nom}" %></h3>

<div class="pull-right"><%= link_to 'Supprimer', @port, method: :delete, data: { confirm: 'Supprimer ce port ?' }, class: 'btn btn-danger' %></div>

<h4> <%= "Slot: #{@port.parent.try(:composant).try(:name)}" %></h4>
<h4> <%= "Carte: #{@port.parent.card.try(:name)}" %></h4>

<%= form_for(@port, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @port.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@port.errors.count, "error") %> prohibited this port from being saved:</h4>

      <ul>
        <% @port.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :parent_type %>

  <div class="form-group">
    <%= f.label :position, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :position, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vlans, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :vlans, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :color, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :color, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cablename, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cablename, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Valider', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
