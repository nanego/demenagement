<div class="container">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_salle_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter une salle
        <% end %>
        <h1>Salles</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Activ√©</th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @salles) do |salle| %>
            <td><%= salle.title %></td>
            <td><%= salle.description %></td>
            <td><input type="checkbox" <%= salle.published ? "checked" : "" %> disabled></td>
            <td><%= link_to 'Modifier', edit_salle_path(salle) %></td>
            <td><%= link_to 'Supprimer', salle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
